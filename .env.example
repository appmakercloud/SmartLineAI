# Node Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/smartlineai

# Redis
REDIS_URL=redis://localhost:6379

# VoIP Provider Configuration
DEFAULT_VOIP_PROVIDER=twilio # Options: twilio, plivo

# Twilio Configuration (Primary)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Plivo Configuration (Backup)
PLIVO_AUTH_ID=your_plivo_auth_id
PLIVO_AUTH_TOKEN=your_plivo_auth_token
PLIVO_APP_ID=your_plivo_app_id

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key

# Base URL (Update for production)
BASE_URL=http://localhost:3000

# Stripe (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OpenAI (for AI features)
OPENAI_API_KEY=your_openai_api_key

# Admin Setup
ADMIN_EMAIL=admin@smartlineai.com
ADMIN_PASSWORD=change_this_password

# Push Notifications
APN_KEY_ID=your_apple_key_id
APN_TEAM_ID=your_apple_team_id