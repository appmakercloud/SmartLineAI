# Environment Configuration for SmartLine AI Backend
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/smartlineai

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# VoIP Providers
DEFAULT_VOIP_PROVIDER=twilio # Options: twilio, plivo

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_APP_SID=your-twilio-app-sid
TWILIO_PHONE_NUMBER=+1234567890

# Twilio API Keys for Voice SDK (create in Twilio Console)
TWILIO_API_KEY_SID=your-twilio-api-key-sid
TWILIO_API_KEY_SECRET=your-twilio-api-key-secret
TWILIO_TWIML_APP_SID=your-twiml-app-sid

# Plivo Configuration
PLIVO_AUTH_ID=your-plivo-auth-id
PLIVO_AUTH_TOKEN=your-plivo-auth-token
PLIVO_APP_ID=your-plivo-app-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Stripe Product IDs (create these in Stripe Dashboard)
STRIPE_PRODUCT_ID_STARTER=prod_xxx
STRIPE_PRODUCT_ID_PROFESSIONAL=prod_xxx
STRIPE_PRODUCT_ID_BUSINESS=prod_xxx

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_ID_PROFESSIONAL_MONTHLY=price_xxx
STRIPE_PRICE_ID_BUSINESS_MONTHLY=price_xxx

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@smartlineai.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:8100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Free Trial Limits
FREE_TRIAL_DAYS=7
FREE_TRIAL_MINUTES=60
FREE_TRIAL_SMS=100

# Usage Limits by Plan
PLAN_FREE_MINUTES=0
PLAN_FREE_SMS=0
PLAN_STARTER_MINUTES=500
PLAN_STARTER_SMS=1000
PLAN_PROFESSIONAL_MINUTES=2000
PLAN_PROFESSIONAL_SMS=5000
PLAN_BUSINESS_MINUTES=10000
PLAN_BUSINESS_SMS=25000

# Admin Setup
ADMIN_EMAIL=admin@smartlineai.com
ADMIN_PASSWORD=change_this_password

# Push Notifications (iOS)
APN_KEY_ID=your_apple_key_id
APN_TEAM_ID=your_apple_team_id